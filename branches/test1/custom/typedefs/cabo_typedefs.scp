[typedef t_weapon_sword]
on=@clienttooltip
	SRC.f_cs_tooltip_weapon <I.UID>
	
	RETURN 1
	
[typedef t_armor]
on=@clienttooltip
	SRC.f_cs_tooltip_armor <I.UID>
	
	RETURN 1

ON=@Equip
	IF <I.TAG0.RESFIRE>
		SRC.RESFIRE += <I.TAG0.RESFIRE>
	ENDIF
	IF <I.TAG0.RESCOLD>
		SRC.RESCOLD += <I.TAG0.RESCOLD>
	ENDIF
	IF <I.TAG0.RESPOISON>
		SRC.RESPOISON += <I.TAG0.RESPOISON>
	ENDIF
	IF <I.TAG0.RESENERGY>
		LOCAL.RESENERGY += <I.TAG0.RESENERGY>
	ENDIF
	
on=@UnEquip
	IF <I.TAG0.RESFIRE>
		SRC.RESFIRE -= <I.TAG0.RESFIRE>
	ENDIF
	IF <I.TAG0.RESCOLD>
		SRC.RESCOLD -= <I.TAG0.RESCOLD>
	ENDIF
	IF <I.TAG0.RESPOISON>
		SRC.RESPOISON -= <I.TAG0.RESPOISON>
	ENDIF
	IF <I.TAG0.RESENERGY>
		LOCAL.RESENERGY -= <I.TAG0.RESENERGY>
	ENDIF

